/* components/playlist/playlist.wxss */
.playItem-ctn {
    width: 220rpx;
    position: relative;
    padding-bottom: 20rpx;
}
.playItem-cover {
    width: 100%;
    height: 220rpx;
    border-radius: 6rpx;
}
.playItem-name {
    font-size: 26rpx;
    line-height: 1.2;
    padding: 2px 0 0 6px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.playItem-count {
    font-size: 20rpx;
    color: #fff;
    text-shadow: 1px 0 0 rgba(0,0,0,0.5);
    position: absolute;
    right: 10rpx;
    top: 4rpx;
    padding-left: 20rpx;
}
.listen-icon {
    width: 20rpx;
    height: 20rpx;
    height: 20rpx;
}
